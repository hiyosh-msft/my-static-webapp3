{
    "routes": [
        {
            "route": "/index2.html",
            "allowedRoles": ["authenticated"]
        },
        {
            "route": "/login",
            "redirect": "/.auth/login/aad?post_login_redirect_uri=https://20.222.116.147/index2.html"
        },
        {
             "route": "/logout",
             "redirect": "/.auth/logout?post_logout_redirect_uri=https://20.222.116.147"
        }
    ],
    
    "navigationFallback": {
        "rewrite": "/index.html"
    },
    
    "responseOverrides": {
        "401": {
          "redirect": "/login",
          "statusCode": 302
        }
    },
    
    "auth": {
        "identityProviders": {
            "azureActiveDirectory": {
                "registration": {
                    "openIdIssuer": "https://login.microsoftonline.com/72f988bf-86f1-41af-91ab-2d7cd011db47/v2.0",
                    "clientIdSettingName": "AZURE_CLIENT_ID",
                    "clientSecretSettingName": "AZURE_CLIENT_SECRET"
                }
            }
        }
    },

    "networking": {
        "allowedIpRanges": ["10.2.0.0/24"]
    }
    
}
